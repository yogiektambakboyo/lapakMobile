<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:paddingTop="3dip"
    android:paddingBottom="3dip">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:id="@+id/LStock_Lay"
        android:paddingLeft="3dip"
        android:paddingBottom="2dip"
        android:paddingTop="2dip"
        android:elevation="1dp">



        <LinearLayout
            android:orientation="vertical"
            android:layout_width="160dip"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="100dip"
                android:layout_height="wrap_content"
                android:id="@+id/LStock_ProductCode"
                android:layout_marginRight="10dip"
                android:layout_marginLeft="10dip"
                android:visibility="gone" />

            <TextView
                android:layout_width="160dip"
                android:layout_height="wrap_content"
                android:text="Nama"
                android:id="@+id/LStock_Name"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Barcode : 0000000000000"
                android:textSize="10sp"
                android:id="@+id/LStock_Barcode"
                android:textColor="@android:color/black" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="60dip"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|center_horizontal"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/LStock_IsAvailable"
                android:layout_width="28dip"
                android:layout_height="28dip"
                android:background="@drawable/sfa_error" />
        </LinearLayout>

        <TextView
            android:layout_width="40dip"
            android:layout_height="wrap_content"
            android:text="99"
            android:id="@+id/LStock_Inv_Shelf"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="@android:color/black" />


        <TextView
            android:layout_width="50dip"
            android:layout_height="wrap_content"
            android:text="99"
            android:id="@+id/LStock_Inv_WhCase"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="@android:color/black" />

        <TextView
            android:layout_width="50dip"
            android:layout_height="wrap_content"
            android:text="99"
            android:id="@+id/LStock_Inv_WhPcs"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="@android:color/black" />

        <TextView
            android:layout_width="40dip"
            android:layout_height="wrap_content"
            android:text="99"
            android:id="@+id/LStock_NED"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="@android:color/black" />

        <TextView
            android:layout_width="120dip"
            android:layout_height="wrap_content"
            android:text="99.9999"
            android:id="@+id/LStock_Total"
            android:gravity="center_horizontal|right"
            android:textColor="@android:color/black"
            android:layout_marginRight="5dip" />

        <TextView
            android:layout_width="160dip"
            android:layout_height="wrap_content"
            android:text="-"
            android:id="@+id/LStock_Reason"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="@android:color/black" />

    </LinearLayout>


</LinearLayout>