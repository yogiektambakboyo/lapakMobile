<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="5dip"
    android:paddingBottom="5dip">

    <TextView
        android:layout_width="50dip"
        android:layout_height="wrap_content"
        android:text="No"
        android:id="@+id/LReportVolume_No"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:textColor="@android:color/black"
        android:layout_gravity="center"
        android:gravity="center_vertical|center_horizontal" />

    <TextView
        android:layout_width="140dip"
        android:layout_height="wrap_content"
        android:text="Nama toko"
        android:id="@+id/LReportVolume_NamaToko"
        android:layout_marginRight="5dip"
        android:textColor="@android:color/black"
        android:layout_marginLeft="5dip"
        android:layout_gravity="left"
        android:gravity="left" />

    <TextView
        android:layout_width="100dip"
        android:layout_height="wrap_content"
        android:text="AP3M"
        android:id="@+id/LReportVolume_AP3M"
        android:paddingLeft="5dip"
        android:paddingRight="5dip"
        android:textColor="@android:color/black"
        android:layout_gravity="center"
        android:gravity="center_vertical|center_horizontal"
        android:visibility="gone" />

    <TextView
        android:layout_width="100dip"
        android:layout_height="wrap_content"
        android:text="VTarget"
        android:id="@+id/LReportVolume_VTarget"
        android:paddingLeft="5dip"
        android:paddingRight="5dip"
        android:textColor="@android:color/black"
        android:layout_gravity="center"
        android:gravity="center_vertical|center_horizontal" />

    <TextView
        android:layout_width="100dip"
        android:layout_height="wrap_content"
        android:text="V Actual"
        android:id="@+id/LReportVolume_Actual"
        android:paddingRight="5dip"
        android:paddingLeft="5dip"
        android:textColor="@android:color/black"
        android:layout_gravity="center"
        android:gravity="center_vertical|center_horizontal" />

    <TextView
        android:layout_width="150dip"
        android:layout_height="wrap_content"
        android:text="V Actual Gross"
        android:id="@+id/LReportVolume_ActualGross"
        android:paddingRight="5dip"
        android:paddingLeft="5dip"
        android:textColor="@android:color/black"
        android:layout_gravity="center"
        android:gravity="center_vertical|center_horizontal" />

</LinearLayout>