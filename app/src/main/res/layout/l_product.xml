<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:paddingTop="3dip"
    android:paddingBottom="3dip">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:id="@+id/LStockOrder_Lay"
        android:paddingLeft="3dip"
        android:paddingBottom="2dip"
        android:paddingTop="2dip"
        android:elevation="1dp">



        <LinearLayout
            android:orientation="vertical"
            android:layout_width="180dip"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="100dip"
                android:layout_height="wrap_content"
                android:id="@+id/LStockOrder_ProductCode"
                android:layout_marginRight="10dip"
                android:layout_marginLeft="10dip"
                android:visibility="gone" />

            <TextView
                android:layout_width="180dip"
                android:layout_height="wrap_content"
                android:text="Nama"
                android:id="@+id/LStockOrder_Name"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LPQ : 0,0,0,0"
                android:textSize="10sp"
                android:id="@+id/LStockOrder_PPQ"
                android:textColor="@android:color/black" />

        </LinearLayout>

        <TextView
            android:layout_width="40dip"
            android:layout_height="wrap_content"
            android:text="99"
            android:id="@+id/LStockOrder_ICO"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="@android:color/black" />

        <TextView
            android:layout_width="40dip"
            android:layout_height="wrap_content"
            android:text="99"
            android:id="@+id/LStockOrder_SO"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="@android:color/black" />

        <TextView
            android:layout_width="32dip"
            android:layout_height="wrap_content"
            android:text="99"
            android:id="@+id/LStockOrder_OC"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="@android:color/black" />

        <TextView
            android:layout_width="32dip"
            android:layout_height="wrap_content"
            android:text="99"
            android:id="@+id/LStockOrder_OP"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="@android:color/black" />

        <TextView
            android:layout_width="100dip"
            android:layout_height="wrap_content"
            android:text="99"
            android:id="@+id/LStockOrder_SS"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="@android:color/black" />

        <TextView
            android:layout_width="100dip"
            android:layout_height="wrap_content"
            android:text="99"
            android:id="@+id/LStockOrder_SIH"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="@android:color/black" />

        <TextView
            android:layout_width="100dip"
            android:layout_height="wrap_content"
            android:text="99.9999"
            android:id="@+id/LStockOrder_Total"
            android:gravity="center_horizontal|right"
            android:textColor="@android:color/black" />
        <TextView
            android:layout_width="100dip"
            android:layout_height="wrap_content"
            android:text="99.9999"
            android:id="@+id/LStockOrder_TotalGross"
            android:gravity="center_horizontal|right"
            android:textColor="@android:color/black" />

    </LinearLayout>


</LinearLayout>