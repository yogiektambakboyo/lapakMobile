<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".intent.Activity_Login">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal|bottom"
        android:orientation="horizontal"
        android:paddingTop="5dip"
        android:paddingBottom="5dip">


        <LinearLayout
            android:layout_width="34dip"
            android:layout_height="34dip"
            android:layout_marginLeft="5dip"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/Login_Update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dip"
                android:src="@drawable/sfa_update" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical|right"
                android:gravity="center_vertical|center_horizontal|right"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/Login_ImgSetting"
                    android:layout_width="38dip"
                    android:layout_height="38dip"
                    android:src="@drawable/ic_action_setting" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="10dip"
                android:gravity="bottom|right"
                android:orientation="vertical"
                android:paddingLeft="5dip"
                android:paddingRight="10dip">

                <TextView
                    android:id="@+id/Login_TxtVersion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Version "
                    android:textColor="@color/blue"
                    android:textIsSelectable="false"
                    android:textSize="12sp"
                    android:textStyle="normal|bold|italic" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="30dip">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="15dip"
                android:orientation="horizontal"
                android:paddingLeft="10dip"
                android:paddingRight="10dip">

                <ImageView
                    android:layout_width="150dip"
                    android:layout_height="40dip"
                    ads:srcCompat="@drawable/logo_landscape" />
            </LinearLayout>

            <ImageView
                android:id="@+id/Login_Icon"
                android:layout_width="300dip"
                android:layout_height="150dip"
                android:layout_marginBottom="15dip"
                android:src="@drawable/login_icon"
                app:srcCompat="@drawable/login_icon" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_marginBottom="10dip"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="horizontal"
                android:paddingLeft="15dip"
                android:paddingRight="15dip">

                <ImageView
                    android:id="@+id/Login_IconUser"
                    android:layout_width="32dip"
                    android:layout_height="32dip"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dip"
                    android:src="@drawable/sfa_user" />

                <com.libizo.CustomEditText
                    android:id="@+id/Login_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:hint="Username"
                    android:inputType="textNoSuggestions"
                    android:padding="10dip"
                    android:singleLine="true"
                    android:textSize="18sp"
                    app:libIZO_clearIconTint="@color/colorAccent"
                    app:libIZO_setBorderColor="@color/colorAccent"
                    app:libIZO_setBorderView="true"
                    app:libIZO_setClearIconVisible="true"
                    app:libIZO_setCornerRadius="4dp"
                    app:libIZO_setStrokeWidth="2dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="horizontal"
                android:paddingLeft="15dip"
                android:paddingRight="15dip">

                <ImageView
                    android:id="@+id/Login_IconPassword"
                    android:layout_width="32dip"
                    android:layout_height="32dip"
                    android:layout_marginRight="10dip"
                    android:src="@drawable/sfa_pass" />

                <com.libizo.CustomEditText
                    android:id="@+id/Login_pass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:hint="Password"
                    android:inputType="textNoSuggestions|textPassword"
                    android:padding="10dip"
                    android:password="true"
                    android:singleLine="true"
                    android:textSize="18sp"
                    app:libIZO_clearIconTint="@color/colorAccent"
                    app:libIZO_hideShowPasswordIconTint="@color/colorPrimary"
                    app:libIZO_setBorderColor="@color/colorAccent"
                    app:libIZO_setBorderView="true"
                    app:libIZO_setClearIconVisible="true"
                    app:libIZO_setCornerRadius="4dp"
                    app:libIZO_setFont="@string/exo2"
                    app:libIZO_setStrokeWidth="2dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="20dip"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/Login_Submit"
                    style="@style/btnStyleBlueGradient"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="30dip"
                    android:layout_marginRight="30dip"
                    android:gravity="center_vertical|center_horizontal"
                    android:paddingLeft="10dip"
                    android:paddingRight="10dip"
                    android:text="Login" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="10dip"
                android:gravity="center_horizontal|center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/Login_ResetPassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="Lupa Password?"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:visibility="gone" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
