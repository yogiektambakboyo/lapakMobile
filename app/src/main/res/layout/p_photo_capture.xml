<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="14dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/PhotoCapture_Icon"
                android:layout_width="48dip"
                android:layout_height="48dip"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="10dip"
                android:src="@drawable/sfa_camera" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:text="Photo Capture"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="7dip"
                android:gravity="center_vertical|right"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/PhotoCapture_GeoMaps"
                    android:layout_width="32dip"
                    android:layout_height="32dip"
                    android:layout_marginRight="15dip"
                    android:src="@drawable/sfa_maps" />


                <ImageView
                    android:id="@+id/PhotoCapture_ScanQR"
                    android:layout_width="32dip"
                    android:layout_height="32dip"
                    android:layout_marginRight="15dip"
                    android:src="@drawable/sfa_qrcode"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/PhotoCapture_Refresh"
                    android:layout_width="32dip"
                    android:layout_height="32dip"
                    android:src="@drawable/sfa_refresh" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dip"
            android:layout_marginTop="10dip"
            android:layout_marginLeft="5dip">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="80dip"
                    android:layout_height="wrap_content"
                    android:text="Nama Toko"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Perusahaan X"
                    android:id="@+id/PhotoCapture_RetailerName"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dip"
            android:layout_marginLeft="5dip"
            android:visibility="gone">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="80dip"
                    android:layout_height="wrap_content"
                    android:text="Alamat"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Alamat"
                    android:id="@+id/PhotoCapture_Alamat"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dip"
            android:layout_marginLeft="5dip">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="80dip"
                    android:layout_height="wrap_content"
                    android:text="Geolocation"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Geo Location"
                    android:id="@+id/PhotoCapture_Geolocation"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dip"
            android:layout_marginBottom="10dip"
            android:layout_marginLeft="5dip">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="80dip"
                    android:layout_height="wrap_content"
                    android:text="Reverse"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reverse Geocode"
                    android:id="@+id/PhotoCapture_ReverseGeolocation"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="top"
            android:layout_gravity="top"
            android:layout_marginBottom="80dip">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/PhotoCapture_Img"
                android:padding="5dip"
                android:layout_gravity="top"
                android:src="@drawable/sfa_imagepreview" />

            <ViewAnimator
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/PhotoCapture_viewAnimator" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|center_horizontal"
        android:layout_alignParentBottom="true"
        android:paddingBottom="10dip"
        android:paddingTop="5dip">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Capture"
            android:id="@+id/PhotoCapture_Btn"
            style="@style/btnStyleWhite"
            android:layout_marginRight="15dip" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Simpan"
            android:id="@+id/PhotoCapture_Save"
            style="@style/btnStyleWhite"
            android:layout_marginLeft="15dip" />
    </LinearLayout>

</RelativeLayout>
