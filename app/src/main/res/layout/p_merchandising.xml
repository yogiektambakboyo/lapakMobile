<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bcp.pstp.Activity_Merchandising">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#006666"
            android:paddingTop="5dip"
            android:paddingBottom="5dip"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/SummaryOrder_Icon"
                android:layout_marginLeft="5dip"
                android:src="@drawable/sfa_merchadise"
                android:layout_width="48dip"
                android:layout_height="48dip" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Merchandising"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:gravity="center_vertical|center_horizontal">

            <Button
                android:text="List"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Merchandise_BtnList"
                android:elevation="1dp"
                android:layout_marginRight="15dip" />

            <Button
                android:text="Foto Display"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Merchandise_BtnDisplay"
                android:layout_marginLeft="15dip" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Merchandise_LayDis"
            android:visibility="visible">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#006666"
                android:layout_marginTop="10dip"
                android:padding="5dip"
                android:gravity="center_vertical|center_horizontal"
                android:layout_gravity="center_vertical|center_horizontal">

                <TextView
                    android:text="Display Toko"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:gravity="center_vertical|center_horizontal" />

                <TextView
                    android:text=" (0 Checked)"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/Merchandise_Checked"
                    android:textColor="@android:color/white"
                    android:elevation="1dp" />
            </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical|center_horizontal">

                        <LinearLayout
                            android:orientation="vertical"
                            android:paddingTop="7dip"
                            android:paddingLeft="7dip"
                            android:paddingRight="7dip"
                            android:layout_width="match_parent"
                            android:gravity="center_vertical|center_horizontal"
                            android:layout_height="wrap_content"
                            android:id="@+id/Merchandise_LyFoto1">

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical|center_horizontal">

                                <TextView
                                    android:text="Tipe Foto #1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:elevation="1dp"
                                    android:layout_marginRight="10dip"
                                    android:textColor="@android:color/black" />

                                <Spinner
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/Merchandise_Spn1"
                                    android:elevation="1dp" />
                            </LinearLayout>

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical|center_horizontal">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center_vertical|center_horizontal">

                                    <ImageView
                                        android:id="@+id/Merchandise_Img1"
                                        android:src="@drawable/sfa_image"
                                        android:layout_width="200dip"
                                        android:background="@color/colorAccent"
                                        android:layout_height="120dip" />
                                    <ImageView
                                        android:layout_width="32dip"
                                        android:layout_height="32dip"
                                        android:src="@drawable/sfa_error"
                                        android:id="@+id/Merchandise_ImgStatus1"
                                        android:layout_marginLeft="180dip"
                                        android:elevation="2dp" />

                                </RelativeLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical|center_horizontal">

                                <Button
                                    android:text="Capture"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/Merchandise_BtnPhoto1"
                                    android:elevation="1dp"
                                    android:layout_marginRight="10dip" />

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:paddingTop="7dip"
                            android:paddingLeft="7dip"
                            android:paddingRight="7dip"
                            android:layout_width="match_parent"
                            android:gravity="center_vertical|center_horizontal"
                            android:layout_height="wrap_content"
                            android:id="@+id/Merchandise_LyFoto2">

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical|center_horizontal">

                                <TextView
                                    android:text="Tipe Foto #2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:elevation="1dp"
                                    android:layout_marginRight="10dip"
                                    android:textColor="@android:color/black" />

                                <Spinner
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/Merchandise_Spn2"
                                    android:elevation="1dp" />
                            </LinearLayout>

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:gravity="center_vertical|center_horizontal"
                                android:layout_height="wrap_content">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center_vertical|center_horizontal">

                                    <ImageView
                                        android:id="@+id/Merchandise_Img2"
                                        android:src="@drawable/sfa_image"
                                        android:layout_gravity="center_vertical|center_horizontal"
                                        android:layout_width="200dip"
                                        android:background="@color/colorAccent"
                                        android:layout_height="120dip" />

                                    <ImageView
                                        android:layout_width="32dip"
                                        android:layout_height="32dip"
                                        android:src="@drawable/sfa_error"
                                        android:id="@+id/Merchandise_ImgStatus2"
                                        android:layout_marginLeft="180dip"
                                        android:elevation="2dp" />
                                </RelativeLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical|center_horizontal">

                                <Button
                                    android:text="Capture"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/Merchandise_BtnPhoto2"
                                    android:elevation="1dp"
                                    android:layout_marginRight="10dip" />

                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Merchandise_LayList"
            android:visibility="gone">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#006666"
                android:layout_marginTop="10dip"
                android:padding="5dip"
                android:gravity="center_vertical|center_horizontal"
                android:layout_gravity="center_vertical|center_horizontal">

                <TextView
                    android:text="Default List "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_gravity="center_vertical|center_horizontal" />

                <TextView
                    android:text="(0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/Merchandise_Size"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:elevation="1dp"
                    android:textColor="@android:color/white" />
                <TextView
                    android:text="0)"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/Merchandise_SizeAll"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:elevation="1dp"
                    android:textColor="@android:color/white" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|center_horizontal">

                <ImageView
                    android:layout_width="32dip"
                    android:layout_height="32dip"
                    android:src="@drawable/sfa_search"
                    android:elevation="1dp"
                    android:layout_marginLeft="10dip"
                    android:padding="5dip" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:id="@+id/Merchandise_Src"
                    android:layout_weight="1"
                    android:inputType="text"
                    android:layout_marginTop="4dip"
                    android:textSize="12sp" />
            </LinearLayout>

            <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/Merchandise_Ls"
                android:layout_marginTop="10dip"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
