<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="35dip"
            android:layout_height="wrap_content"
            android:text="No"
            android:layout_gravity="center"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="@android:color/black"
            android:paddingTop="5dip"
            android:paddingBottom="5dip"
            android:layout_marginLeft="5dip"
            android:id="@+id/Col_List_No" />
        <TextView
            android:layout_width="200dip"
            android:layout_height="wrap_content"
            android:text="Nama Toko"
            android:gravity="center_vertical|left"
            android:paddingTop="5dip"
            android:paddingBottom="5dip"
            android:layout_marginLeft="5dip"
            android:textColor="@android:color/black"
            android:id="@+id/Col_List_Toko"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/Col_List_Original"
            android:layout_width="100dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dip"
            android:gravity="center_vertical|right"
            android:paddingBottom="5dip"
            android:paddingTop="5dip"
            android:text="Total Nilai Faktur Awal"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/Col_List_Outstanding"
            android:layout_width="100dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dip"
            android:gravity="center_vertical|right"
            android:paddingBottom="5dip"
            android:paddingTop="5dip"
            android:text="Total Nilai Tagihan"
            android:textColor="@android:color/black"
            android:visibility="visible" />



        <TextView
        android:id="@+id/Col_List_Payment"
        android:layout_width="100dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="5dip"
        android:gravity="center_vertical|right"
        android:paddingBottom="5dip"
        android:paddingTop="5dip"
        android:text="Total Nilai Pembayaran"
        android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/Col_List_Return"
            android:layout_width="200dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dip"
            android:gravity="center_vertical|right"
            android:paddingBottom="5dip"
            android:paddingTop="5dip"
            android:text="Total Nilai Retur"
            android:textColor="@android:color/black"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>